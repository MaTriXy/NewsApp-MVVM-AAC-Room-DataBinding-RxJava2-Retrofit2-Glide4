<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="sources"
            type="com.nuhkoca.mvvmrxjavaretrofitdatabindingdemo.data.remote.Sources" />
    </data>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{sources.name}"
                style="@style/ArticleTitleAppearance"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{sources.description}"
                style="@style/ArticleDescriptionAppearance"/>

        </LinearLayout>
</layout>