<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:itemBackground">?attr/selectableItemBackground</item>
        <item name="android:textColor">@color/black</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <!-- Splash Screen Theme -->
    <style name="AppTheme.Launcher" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@drawable/splash_screen_background</item>
    </style>

    <!-- Toolbar Header Theme -->
    <style name="ToolbarHeaderAppearance" parent="TextAppearance.AppCompat"/>
    <style name="ToolbarHeaderAppearance.Title">
        <item name="android:text">@string/main_header</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">start</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/headerTextSize</item>
        <item name="android:paddingStart">8dp</item>
    </style>

    <!-- Article CardView Style-->
    <style name="ArticleCardViewAppearance">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="android:layout_margin">@dimen/cardViewMargin</item>
        <item name="cardCornerRadius">@dimen/cardViewCornerRadius</item>
        <item name="cardElevation">@dimen/cardViewElevation</item>
    </style>

    <!-- Article Title Style-->
    <style name="ArticleTitleAppearance">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textSize">@dimen/titleTextSize</item>
        <item name="android:layout_margin">@dimen/titleMargin</item>
        <item name="android:lines">2</item>
    </style>

    <!-- Article Description Style-->
    <style name="ArticleDescriptionAppearance">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/secondaryText</item>
        <item name="android:textSize">@dimen/descriptionTextSize</item>
        <item name="android:layout_margin">@dimen/titleMargin</item>
        <item name="android:lines">7</item>
    </style>

    <!-- Article Source Style-->
    <style name="ArticleSourceAppearance">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/secondaryText</item>
        <item name="android:textSize">@dimen/sourceTextSize</item>
        <item name="android:layout_marginEnd">@dimen/titleMargin</item>
        <item name="android:layout_marginStart">@dimen/titleMargin</item>
        <item name="android:layout_marginBottom">@dimen/titleMargin</item>
        <item name="android:layout_marginTop">@dimen/sourceMarginTop</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:lines">1</item>
    </style>

    <!--Source Category Style-->
    <style name="SourceCategoryAppearance">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/secondaryText</item>
        <item name="android:textSize">@dimen/sourceTextSize</item>
        <item name="android:layout_marginEnd">@dimen/titleMargin</item>
        <item name="android:layout_marginStart">@dimen/titleMargin</item>
        <item name="android:layout_marginBottom">@dimen/titleMargin</item>
        <item name="android:layout_marginTop">@dimen/titleMargin</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">end</item>
    </style>

    <!-- Source Title Style-->
    <style name="SourceTitleAppearance">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textSize">@dimen/titleTextSize</item>
        <item name="android:layout_margin">@dimen/titleMargin</item>
    </style>

    <!-- Source Description Style-->
    <style name="SourceDescriptionAppearance">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/secondaryText</item>
        <item name="android:textSize">@dimen/descriptionTextSize</item>
        <item name="android:layout_margin">@dimen/titleMargin</item>
    </style>

</resources>
